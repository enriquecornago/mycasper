{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

<main class="content" role="main">

    <article class="{{post_class}}">
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}

        <h1 class="post-title">{{title}}</h1>
        <br>
        <section class="post-content">
            {{content}}
        </section>

    {{/post}}
        
        <section class="share">
            <h4>Share our journey on your social networks</h4>
            <a class="fa fa-twitter" href="https://twitter.com/share?text=check%20out%20Ribbon%20and%20Beard&amp;url=http://ribbonandbeard.com"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <span class="hidden">Twitter</span>
            </a>
            <a class="fa fa-facebook" href="https://www.facebook.com/sharer/sharer.php?u=http://ribbonandbeard.com"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <span class="hidden">Facebook</span>
            </a>
            <a class="fa fa-google-plus" href="https://plus.google.com/share?url=http://ribbonandbeard.com"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <span class="hidden">Google+</span>
            </a>
        </section>
    </article>

</main>
